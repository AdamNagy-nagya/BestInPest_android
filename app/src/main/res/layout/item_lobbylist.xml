<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_lobbylistLockImage"/>

    <TextView
        android:id="@+id/item_lobbylistLobbyNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LobbyName"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/item_lobbylistLobbyLeaderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LobbyLeader"
        android:textColor="@color/white"
        android:paddingHorizontal="5dp"/>

    <TextView
        android:id="@+id/item_lobbylistMaxPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5/5"
        android:textColor="@color/white"/>



    <Button
        android:id="@+id/item_lobbylistJoinBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Belépés"
        android:backgroundTint="@color/tapeYellow"
        android:textColor="@color/white"
        android:layout_gravity="right"
        />

</LinearLayout>