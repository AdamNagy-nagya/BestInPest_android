<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>

        <item name="colorPrimary">@color/asphaltGray</item>
        <item name="colorPrimaryDark">@color/asphaltGray</item>
        <item name="colorAccent">@color/tapeYellow</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/asphaltDarkGray</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/white</item>
        <!-- Used for the background -->
        <item name="android:background">@color/asphaltGray</item>
    </style>

</resources>
